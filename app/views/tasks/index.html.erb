<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p><input type="checkbox" name="vehicle3" value="" disabled
    <% if task.completed %>
      <%= "checked" %>
      <% end %>
    ><%= link_to "#{task.title}", task_path(task[:id]) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>
<%= link_to "New task", new_path %>
